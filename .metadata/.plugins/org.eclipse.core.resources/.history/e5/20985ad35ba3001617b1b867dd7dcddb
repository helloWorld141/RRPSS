	public void updatePromoPack(int target, int id, String newVal) {
		switch (target) {
		case 1:
			menu.updatePackageName(id, newVal);
			break;
		case 2:
			menu.updatePackagePrice(id, Double.parseDouble(newVal));
			break;
		default:
			System.out.println("Invalid choice!!!");
		}
	}

