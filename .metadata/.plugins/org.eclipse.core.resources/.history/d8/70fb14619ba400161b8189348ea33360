package Application;
import java.time.*;
import java.util.ArrayList;
public class Reservation {
	private int id;
	private String contact;
	private LocalDateTime arrivalTime;
	private int pax;
	private int tableID;
	
	Reservation(int id, String contact, LocalDateTime arrival, int pax){
		this.id = id;
		this.contact = contact;
		this.arrivalTime = arrival;
		this.pax = pax;
		this.tableID = -1;
	}
	
	public void setTime(LocalDateTime arrival){
		this.arrivalTime = arrival;
	}
	public LocalDateTime getTime(){
		return this.arrivalTime;
	}
	public String getContact(){
		return this.contact;
	}
	public void setContact(String contact){
		this.contact = contact;
	}
	public void assign(int tableID){// check validity of tableID in upper layer 
		this.tableID = tableID;
	}
	//return true if successful in assigning
