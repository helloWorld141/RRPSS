package Application;
import java.util.*;
import java.io.*;

public class RestaurantApp {
	public static void main (String[] args) throws IOException{
		final Restaurant myRestaurant = new Restaurant();
		Scanner sc = new Scanner(System.in);
		while (prompt()){
			int opt = sc.nextInt();
			switch (opt){
			case 1:
				modifyMenu(sc);
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 10:
				return;
			}
		}
		
	}
	
	public static boolean prompt(){
		System.out.println("What would you like to perform:"
				+ "\n(1) Modify Menu"
				+ "\n(2) Create new order"
				+ "\n(3) View order"
				+ "\n(4) Print order invoice"
				+ "\n(5) Print total revenue"
				+ "\n(10) Exit");
		return true;
	}
	
	public static void modifyMenu(Scanner sc){
		System.out.println("\nModify Menu:"
				+ "\n(1) Modify a la carte item"
				+ "\n(2) Add/Remove a la carte item"
				+ "\n(3) Modify package"
				+ "\n(4) Add/Remove package"
				+ "\n(5) Back");
		int opt = sc.nextInt();
		switch (opt){
		case 1:
			modifyItem();
			break;
		case 2:
			break;
		case 3:
			break;
		case 4:
			break;
		default: return;
		}
	}
	
	public static void modifyItem(){
		System.out.println(:);
	}
}
